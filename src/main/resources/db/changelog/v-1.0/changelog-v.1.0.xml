<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1" author="alexey">
        <preConditions>
            <not>
                <tableExists tableName="pizza"/>
            </not>
        </preConditions>
        <createTable tableName="pizza">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="price" type="float"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="alexey">
        <preConditions>
            <not>
                <tableExists tableName="customer"/>
            </not>
        </preConditions>
        <createTable tableName="customer">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="alexey">
        <preConditions>
            <not>
                <tableExists tableName="order"/>
            </not>
        </preConditions>
        <createTable tableName="order">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_address" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_cost" type="float" defaultValue="100">
                <constraints nullable="false"/>
            </column>
            <column name="created_timestamp" type="datetime" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="order" baseColumnNames="customer_id"
                                 constraintName="fkey_order_customer" referencedTableName="customer"
                                 referencedColumnNames="id" onUpdate="CASCADE" onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="4" author="alexey">
        <preConditions>
            <not>
                <tableExists tableName="order_position"/>
            </not>
        </preConditions>
        <createTable tableName="order_position">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="pizza_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="order_position" baseColumnNames="order_id"
                                 constraintName="fkey_order_position_order" referencedTableName="order"
                                 referencedColumnNames="id" onUpdate="CASCADE" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="order_position" baseColumnNames="pizza_id"
                                 constraintName="fkey_order_position_pizza" referencedTableName="pizza"
                                 referencedColumnNames="id" onUpdate="CASCADE" onDelete="RESTRICT"/>
    </changeSet>
    <changeSet id="5" author="alexey">
        <preConditions>
            <not>
                <sequenceExists sequenceName="pizza_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="pizza_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="6" author="alexey">
        <preConditions>
            <not>
                <sequenceExists sequenceName="customer_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="customer_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="7" author="alexey">
        <preConditions>
            <not>
                <sequenceExists sequenceName="order_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="order_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="8" author="alexey">
        <preConditions>
            <not>
                <sequenceExists sequenceName="order_position_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="order_position_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="9" author="anastasia">
        <preConditions>
            <columnExists tableName="pizza" columnName="price"/>
        </preConditions>
        <modifyDataType tableName="pizza" columnName="price" newDataType="int"/>
    </changeSet>
    <changeSet id="10" author="alexey">
        <preConditions>
            <columnExists tableName="order" columnName="customer_id"/>
        </preConditions>
        <dropNotNullConstraint tableName="order" columnName="customer_id"/>
    </changeSet>
    <changeSet id="11" author="alexey">
        <preConditions>
            <not>
                <columnExists tableName="order" columnName="phone"/>
                <columnExists tableName="order" columnName="comment"/>
            </not>
        </preConditions>
        <addColumn tableName="order">
            <column name="phone" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="varchar"/>
        </addColumn>
    </changeSet>
    <changeSet id="12" author="alexey">
        <preConditions>
            <not>
                <columnExists tableName="order" columnName="amount"/>
            </not>
        </preConditions>
        <addColumn tableName="order">
            <column name="amount" type="float"/>
        </addColumn>
    </changeSet>
    <changeSet id="13" author="alexey">
        <preConditions>
            <not>
                <columnExists tableName="order_position" columnName="amount"/>
            </not>
        </preConditions>
        <addColumn tableName="order_position">
            <column name="amount" type="float"/>
        </addColumn>
    </changeSet>
    <changeSet id="14" author="anastasia">
        <preConditions>
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>
        <createTable tableName="user">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="15" author="anastasia">
        <preConditions>
            <not>
                <tableExists tableName="role"/>
            </not>
        </preConditions>
        <createTable tableName="role">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="16" author="anastasia">
        <preConditions>
            <not>
                <sequenceExists sequenceName="user_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="user_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="17" author="anastasia">
        <preConditions>
            <not>
                <sequenceExists sequenceName="role_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="role_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="18" author="anastasia">
        <renameTable oldTableName="user" newTableName="users"/>
    </changeSet>
</databaseChangeLog>
